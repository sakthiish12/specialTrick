{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "ignoreCommand": "exit 0",
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": "@next_public_supabase_url",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@next_public_supabase_anon_key",
    "OPENAI_API_KEY": "@openai_api_key",
    "GITHUB_TOKEN": "@github_token",
    "NEXT_PUBLIC_VERCEL_URL": "@next_public_vercel_url",
    "SKIP_TESTS": "true",
    "SKIP_LINT": "true",
    "SKIP_TYPE_CHECK": "true"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_SUPABASE_URL": "@next_public_supabase_url",
      "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@next_public_supabase_anon_key",
      "OPENAI_API_KEY": "@openai_api_key",
      "GITHUB_TOKEN": "@github_token",
      "NEXT_PUBLIC_VERCEL_URL": "@next_public_vercel_url",
      "SKIP_TESTS": "true",
      "SKIP_LINT": "true",
      "SKIP_TYPE_CHECK": "true"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    },
    {
      "source": "/_next/image(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/ai",
      "destination": "/api/ai/route"
    },
    {
      "source": "/api/github",
      "destination": "/api/github/route"
    },
    {
      "source": "/api/embeddings",
      "destination": "/api/embeddings/route"
    },
    {
      "source": "/api/webhooks/github",
      "destination": "/api/webhooks/github/route"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "github": {
    "silent": true,
    "autoJobCancelation": true
  }
} 